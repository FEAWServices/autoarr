# AutoArr Environment Configuration
# Copy this file to .env and fill in your values

# Git Configuration (for devcontainer)
GIT_EMAIL=your.email@example.com
GIT_NAME=Your Name

# GitHub Admin Token (for devcontainer - optional)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Scopes needed: repo, read:org, workflow, admin:org
GITHUB_ADMIN_TOKEN=

# SABnzbd
SABNZBD_API_KEY=your_sabnzbd_api_key_here

# Sonarr
SONARR_API_KEY=your_sonarr_api_key_here

# Radarr
RADARR_API_KEY=your_radarr_api_key_here

# Plex
PLEX_TOKEN=your_plex_token_here

# AI Features (Optional)
ANTHROPIC_API_KEY=
BRAVE_API_KEY=

# Application Settings (Optional - has defaults)
# APP_ENV=production
# LOG_LEVEL=INFO
# PORT=8088
# DATABASE_URL=sqlite:////data/autoarr.db
# REDIS_URL=memory://
