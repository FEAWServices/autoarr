# AutoArr Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Security Settings (REQUIRED for production)
# =============================================================================
# Generate a secure secret key for production:
# python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=dev_secret_key_change_in_production

# =============================================================================
# Git Configuration (for devcontainer)
# =============================================================================
GIT_EMAIL=your.email@example.com
GIT_NAME=Your Name

# GitHub Admin Token (for devcontainer - optional)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Scopes needed: repo, read:org, workflow, admin:org
GITHUB_ADMIN_TOKEN=

# =============================================================================
# Media Stack Configuration
# =============================================================================

# SABnzbd
SABNZBD_ENABLED=true
SABNZBD_URL=http://localhost:8080
SABNZBD_API_KEY=your_sabnzbd_api_key_here
SABNZBD_TIMEOUT=30

# Sonarr
SONARR_ENABLED=true
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here
SONARR_TIMEOUT=30

# Radarr
RADARR_ENABLED=true
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key_here
RADARR_TIMEOUT=30

# Plex (optional)
PLEX_ENABLED=false
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here
PLEX_TIMEOUT=30

# =============================================================================
# AI Features (Optional)
# =============================================================================
ANTHROPIC_API_KEY=
BRAVE_API_KEY=

# =============================================================================
# Application Settings (Optional - has defaults)
# =============================================================================
APP_ENV=development
LOG_LEVEL=INFO
PORT=8088
DATABASE_URL=sqlite:///./autoarr.db
REDIS_URL=memory://
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Frontend Environment Variables (for Vite)
# =============================================================================
# Used by the React frontend to connect to the backend API
VITE_API_URL=http://localhost:8088/api/v1
