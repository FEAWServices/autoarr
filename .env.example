# Database Configuration
# Default: SQLite (single-container, no external DB needed - like Sonarr/Radarr)
DATABASE_URL=sqlite:///./data/autoarr.db
# Optional: Use PostgreSQL for advanced deployments
# DATABASE_URL=postgresql://autoarr:autoarr_dev_password@localhost:5432/autoarr

# Redis Configuration
# Default: In-memory (single-container, no external Redis needed)
REDIS_URL=memory://
# Optional: Use external Redis for clustering/scaling
# REDIS_URL=redis://localhost:6379/0

# SABnzbd Configuration
SABNZBD_URL=http://localhost:8080
SABNZBD_API_KEY=your_sabnzbd_api_key_here

# Sonarr Configuration
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here

# Radarr Configuration
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key_here

# Plex Configuration
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here

# LLM Configuration (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Web Search Configuration (Brave)
BRAVE_API_KEY=your_brave_search_api_key_here

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=dev_secret_key_change_in_production
HOST=0.0.0.0
PORT=8088

# Timezone (optional)
TZ=America/New_York

# Frontend Configuration
VITE_API_URL=http://localhost:8088
