# ============================================================================
# AutoArr Premium - Environment Configuration Example
#
# This is the configuration for the proprietary premium version
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# AutoArr version (do not change)
AUTOARR_VERSION=premium

# Environment (production, development, staging)
AUTOARR_ENV=production

# Port to expose AutoArr on
AUTOARR_PORT=8000

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-replace-me

# ============================================================================
# LICENSE CONFIGURATION (REQUIRED FOR PREMIUM)
# ============================================================================

# Your AutoArr Premium license key
# Format: AUTOARR-XXXXX-XXXXX-XXXXX-XXXXX-XXXXX
LICENSE_KEY=AUTOARR-XXXXX-XXXXX-XXXXX-XXXXX-XXXXX

# License server URL for online validation
LICENSE_SERVER_URL=https://license.autoarr.app

# Optional: Path to license file (if not using environment variable)
LICENSE_FILE=./license.key

# ============================================================================
# ML MODEL CONFIGURATION (Premium)
# ============================================================================

# Path to trained model directory
MODEL_PATH=/app/models/trained/autoarr-recovery-model

# Directory containing your trained model (for volume mounting)
MODEL_DIR=./models

# Model inference type: local, vllm, tgi
MODEL_TYPE=local

# Transformers cache directory
TRANSFORMERS_CACHE=/app/models/cache

# HuggingFace home directory
HF_HOME=/app/models/hf

# PyTorch home directory
TORCH_HOME=/app/models/torch

# Optional: vLLM server URL (if using vLLM backend)
# VLLM_URL=http://vllm:8080

# Optional: TGI server URL (if using TGI backend)
# TGI_URL=http://tgi:8080

# ============================================================================
# CLAUDE API CONFIGURATION (Fallback/Hybrid Mode)
# ============================================================================

# Claude API key (optional fallback for complex queries)
CLAUDE_API_KEY=your-claude-api-key

# Claude model
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# SABNZBD CONFIGURATION
# ============================================================================

# SABnzbd URL
SABNZBD_URL=http://sabnzbd:8080

# SABnzbd API Key (found in SABnzbd Config → General)
SABNZBD_API_KEY=your-sabnzbd-api-key

# Enable SABnzbd integration
SABNZBD_ENABLED=true

# Request timeout in seconds
SABNZBD_TIMEOUT=30

# ============================================================================
# SONARR CONFIGURATION
# ============================================================================

# Sonarr URL
SONARR_URL=http://sonarr:8989

# Sonarr API Key (found in Sonarr Settings → General)
SONARR_API_KEY=your-sonarr-api-key

# Enable Sonarr integration
SONARR_ENABLED=true

# Request timeout in seconds
SONARR_TIMEOUT=30

# ============================================================================
# RADARR CONFIGURATION
# ============================================================================

# Radarr URL
RADARR_URL=http://radarr:7878

# Radarr API Key (found in Radarr Settings → General)
RADARR_API_KEY=your-radarr-api-key

# Enable Radarr integration
RADARR_ENABLED=true

# Request timeout in seconds
RADARR_TIMEOUT=30

# ============================================================================
# PLEX CONFIGURATION (Optional)
# ============================================================================

# Plex URL
PLEX_URL=http://plex:32400

# Plex Token (found in Plex Settings → Network)
PLEX_TOKEN=your-plex-token

# Enable Plex integration
PLEX_ENABLED=false

# Request timeout in seconds
PLEX_TIMEOUT=30

# ============================================================================
# DATABASE CONFIGURATION (Premium uses PostgreSQL)
# ============================================================================

# PostgreSQL connection URL
DATABASE_URL=postgresql://autoarr:autoarr@postgres:5432/autoarr

# PostgreSQL credentials
POSTGRES_USER=autoarr
POSTGRES_PASSWORD=autoarr
POSTGRES_DB=autoarr

# ============================================================================
# REDIS CONFIGURATION (Premium)
# ============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379/0

# ============================================================================
# PREMIUM FEATURES CONFIGURATION
# ============================================================================

# Enable autonomous download recovery
AUTONOMOUS_RECOVERY_ENABLED=true

# Enable enhanced monitoring with pattern detection
ENHANCED_MONITORING_ENABLED=true

# Enable predictive failure analytics
PREDICTIVE_ANALYTICS_ENABLED=true

# Enable advanced analytics and reporting
ADVANCED_ANALYTICS_ENABLED=true

# Maximum retry attempts for failed downloads
MAX_RETRY_ATTEMPTS=5

# Enable quality cascade (4K → 1080p → 720p)
QUALITY_CASCADE_ENABLED=true

# Enable alternative indexer failover
INDEXER_FAILOVER_ENABLED=true

# Enable predictive failure detection (ML-powered)
PREDICTIVE_FAILURE_DETECTION=true

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=300

# Enable pattern detection
PATTERN_DETECTION_ENABLED=true

# Enable predictive analysis
PREDICTIVE_ANALYSIS_ENABLED=true

# Notification threshold (low, normal, high, critical)
NOTIFICATION_THRESHOLD=high

# Enable detailed metrics collection
DETAILED_METRICS_ENABLED=true

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================

# Data retention period in days
ANALYTICS_RETENTION_DAYS=90

# Enable success rate tracking
SUCCESS_RATE_TRACKING=true

# Enable performance metrics
PERFORMANCE_METRICS=true

# Enable trend analysis
TREND_ANALYSIS=true

# ============================================================================
# OPTIONAL: CONFIGURATION DIRECTORIES
# ============================================================================

# Path to configuration directory (for volume mounting)
CONFIG_DIR=./config

# Path to data directory (for volume mounting)
DATA_DIR=./data

# Path to logs directory (for volume mounting)
LOGS_DIR=./logs

# ============================================================================
# GPU CONFIGURATION (Optional - for vLLM)
# ============================================================================

# Number of GPUs to use
# NVIDIA_VISIBLE_DEVICES=all

# GPU memory utilization (0.0 to 1.0)
# GPU_MEMORY_UTILIZATION=0.9
