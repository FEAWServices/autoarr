[flake8]
max-line-length = 100
extend-ignore = E203, W503, C901
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    autoarr/tests/,
    autoarr/ui/
# Note: C901 complexity checks are ignored globally due to pre-existing
# complex functions in tool providers. Re-enable once refactored.
max-complexity = 15
show-source = True
statistics = True
